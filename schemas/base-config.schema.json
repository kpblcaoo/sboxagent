{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.subbox.dev/base-config.schema.json",
  "version": "1.0.0",
  "title": "Subbox Configuration Base Schema",
  "description": "Base schema for all subbox client configurations (sing-box, clash, xray, mihomo)",
  "type": "object",
  "properties": {
    "client": {
      "type": "string",
      "enum": ["sing-box", "clash", "xray", "mihomo"],
      "description": "Target subbox client type"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Client version for compatibility tracking"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Configuration creation timestamp in ISO 8601 format"
    },
    "config": {
      "type": "object",
      "description": "Client-specific configuration data"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "description": "Subscription URL or source identifier"
        },
        "generator": {
          "type": "string",
          "description": "Tool that generated this configuration (e.g., sboxmgr-1.5.0)"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 checksum of the configuration for integrity verification"
        },
        "subscription_info": {
          "type": "object",
          "properties": {
            "total_servers": {
              "type": "integer",
              "minimum": 0,
              "description": "Total number of servers in subscription"
            },
            "filtered_servers": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of servers after filtering"
            },
            "excluded_servers": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of excluded servers"
            }
          }
        }
      },
      "required": ["source", "generator", "checksum"]
    }
  },
  "required": ["client", "version", "created_at", "config", "metadata"]
} 